<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <PackageId>CommandLineMenuFramework</PackageId>
    <Version>1.0.0</Version>
    <Description>A customizable and configurable command-line menu framework that you can use when building .NET applications.</Description>
    <Authors>Josh Tucholski, Mike Morel</Authors>
    <RepositoryUrl>https://github.com/jtucholski/cli-menuframework.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>
</Project>